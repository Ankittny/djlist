 
 <%- include('../header') %>
 <%- include('../sidebar') %>
 <!-- ============================================================== -->
 <div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <!-- end page title -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title mb-0">UPDATE CATEGORY</h4>
                        </div><!-- end card header -->

                        <div class="card-body"> 
                            <form  method="post"  action="/category/update" enctype="multipart/form-data">
                                <input type="hidden" value="<%= catdata.id  %>" name="id">
                                <div class="mt-4">  
                                    <div class="row">
                                        <div class="col-xl-6">
                                            <div class="mb-3">
                                                <label for="cleave-ccard" class="form-label">Name</label>
                                                <input type="text" class="form-control" id="cleave-ccard" name="name" placeholder="Enate Category Name.." value="<%= catdata.name %>">
                                            </div>
                                        </div>
                                        <!-- end col -->
                                        <div class="col-xl-6">
                                            <div class="mb-3">
                                                <label for="cleave-delimiters" class="form-label">Category Slug</label>
                                                <input type="text" name="slug" class="form-control" id="cleave-delimiters" placeholder="Enter Slug.." value="<%= catdata.slug %>">
                                            </div>
                                        </div><!-- end col -->
                                        

                                    </div><!-- end row -->

                                    <div class="row">
                                        



                                        <div class="col-xl-6">
                                            <div class="mb-3">
                                                <label for="cleave-delimiter" class="form-label">Status</label>
                                                <select  class="form-control" name="status">
                                                    <option value="1" <%=catdata.status==='1' ? 'selected' : '' %>>ENABLE</option>
                                                    <option value="0" <%=catdata.status==='0' ? 'selected' : '' %>>DISABLE</option>
                                                </select>
                                            </div>
                                        </div>
                                        
                                        <!-- end col -->
                                        <div class="col-xl-6">
                                            <div class="mb-3">
                                                <label for="cleave-prefix" class="form-label">Thumbnail </label>
                                                <input type="file" class="form-control" name="image" id="cleave-prefix">
                                                <input type="hidden" value="<%= catdata.image %>" name="oldimage">
                                            </div>
                                        <img style="width: 150px;
                                        height: 130px; border-radius: 16px;"  src="../../static/img/<%= catdata.image %>" alt="">    


                                        </div><!-- end col -->
                                    </div><!-- end row -->

                                    <div class="row">
                                        <div class="col-xl-6">
                                            <div class="mb-3 mb-xl-0">
                                                <input type="submit" class="btn btn-success">
                                            </div>
                                        </div><!-- end col -->

                                      
                                    </div><!-- end row -->

                                </div>
                            </form><!-- end form -->
                        </div><!-- end card-body -->
                    </div><!-- end card -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->


    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script> Â© Gazingtechnosoft.
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end d-none d-sm-block">
                        Design & Develop by Ankit
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>
<!-- end main content-->

