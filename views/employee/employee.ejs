<%- include('../header') %> <%- include('../sidebar') %>

<div class="main-content">
  <div class="page-content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">EMPLOYTEE</h5>
              <a
                href="/employee/addemployee"
                style="float: right; margin-top: -27px"
                class="btn btn-primary"
              >
                Add Employee
              </a>
            </div>
            <div class="card-body">
              <table
                id="example"
                class="table table-bordered dt-responsive nowrap table-striped align-middle"
                style="width: 100%"
              >
                <thead>
                  <tr>
                    <th scope="col" style="width: 10px">
                      <div class="form-check">
                        <input
                          class="form-check-input fs-15"
                          type="checkbox"
                          id="checkAll"
                          value="option"
                        />
                      </div>
                    </th>
                    <th data-ordering="false">SR No.</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Mobile</th>
                    <th>Salay</th>
                    <th>Join Date</th>
                    <th>Aadhar Card</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% item.forEach(function (item,index) { %>
                  <tr>
                    <th scope="row">
                      <div class="form-check">
                        <input
                          class="form-check-input fs-15"
                          type="checkbox"
                          name="checkAll"
                          value="option1"
                        />
                      </div>
                    </th>
                    <td><%= index+1 %></td>
                    <td>
                      <img
                        style="height: 50px; width: 50px"
                        src="../../static/img/<%= item.image %>"
                      />
                    </td>
                    <td><%= item.name %></td>
                    <td><%= item.mobile %></td>
                    <td><%= item.salary %></td>
                    <td><%= item.date %></td>

                    <td><%= item.aadharcard %></td>
                    <td><%= item.address %></td>

                    <% if (item.status==="0") {%>
                    <td><span class="badge bg-danger">Disable</span></td>
                    <%} else { %>
                    <td><span class="badge bg-success">Active</span></td>
                    <%}%>
                    <td>
                      <div class="dropdown d-inline-block">
                        <button
                          class="btn btn-soft-secondary btn-sm dropdown"
                          type="button"
                          data-bs-toggle="dropdown"
                          aria-expanded="false"
                        >
                          <i class="ri-more-fill align-middle"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                          <li>
                            <a
                              href="/employee/edit/<%= item.id %>"
                              class="dropdown-item edit-item-btn"
                              ><i
                                class="ri-pencil-fill align-bottom me-2 text-muted"
                              ></i>
                              Edit</a
                            >
                          </li>
                          <li>
                            <a
                              href="/employee/delete/<%= item.id %>"
                              class="dropdown-item remove-item-btn"
                            >
                              <i
                                class="ri-delete-bin-fill align-bottom me-2 text-muted"
                              ></i>
                              Delete
                            </a>
                          </li>
                        </ul>
                      </div>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <!--end col-->
      </div>
      <!--end row-->
    </div>
    <!-- container-fluid -->
  </div>

  <%- include('../footer') %>
</div>
